<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/shareLayout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_share_blue" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/orderLayout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_order" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/log_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/app_name" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleSmallInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo_user" />
            </RelativeLayout>

            <TextView
                android:id="@+id/changeImageTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoLayout"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/change_image"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/addActivityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/changeImageTxt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/droidkufi_regular"
                android:text="@string/add_other_activity_type"
                android:textColor="@color/colorDark"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addActivityTxt"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/updateTxt"
                    android:background="@drawable/bg_gray_border"
                    android:enabled="false"
                    android:hint="@string/user_name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/updateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_bg_red"
                    android:padding="10dp"
                    android:text="@string/update_data"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/nameLayout"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_gray_border"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailEditText"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_gray_border"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/cityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/passwordEditText"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_gray_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/cityTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/ic_arrow"
                        android:hint="@string/select_city"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ic_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_arrow_down" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/otherEnCityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cityLayout"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_gray_border"
                    android:gravity="top"
                    android:hint="@string/write_city_en"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/otherArCityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherEnCityEditText"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_gray_border"
                    android:gravity="top"
                    android:hint="@string/write_city_ar"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/pageNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherArCityEditText"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_gray_border"
                    android:hint="@string/page_name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/mobileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pageNameEditText"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_gray_border">

                    <TextView
                        android:id="@+id/codeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="@string/code_no"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/mobileEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/codeTxt"
                        android:background="@null"
                        android:hint="@string/mobile_number"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/services_sea_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobileLayout"
                    android:layout_marginBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/activityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_gray_border"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/activityTypeTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/ic_arrow1"
                            android:hint="@string/select_activity_type"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/ic_arrow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_arrow_down" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/otherEnEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activityLayout"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_gray_border"
                        android:gravity="top"
                        android:hint="@string/write_type_activity_en"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/otherArEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/otherEnEditText"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_gray_border"
                        android:gravity="top"
                        android:hint="@string/write_type_activity_ar"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/describeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@+id/otherArEditText"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_gray_border"
                        android:gravity="top"
                        android:hint="@string/activity_describe"
                        android:inputType="textImeMultiLine"
                        android:padding="10dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/recordNoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/describeEditText"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_gray_border"
                        android:hint="@string/record_number"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/attachImageTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/recordNoEditText"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_gray_border"
                        android:hint="@string/attach_record_image"
                        android:padding="10dp"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/imageRecordLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/attachImageTxt"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageRecordNew_"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_bg" />

                        <ProgressBar
                            android:id="@+id/progressbar_"
                            style="?android:attr/progressBarStyleSmallInverse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/select_location_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageRecordLayout_"
                        android:background="@drawable/bg_gray_border"
                        android:hint="@string/select_location"
                        android:padding="10dp"
                        android:textSize="14sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/updateBtn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/services_sea_layout"
                    android:background="@drawable/button_bg"
                    android:padding="10dp"
                    android:text="@string/update_data"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infoLayout"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text="@string/image"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/addImageBtn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_bg_green"
                    android:text="@string/add_image"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <TextView
                android:id="@+id/noContentImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageLayout"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/no_image"
                android:visibility="visible" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleViewImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noContentImage" />


            <Button
                android:id="@+id/logoutBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycleViewImage"
                android:layout_margin="10dp"
                android:background="@drawable/button_bg_red"
                android:padding="10dp"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <Button
                android:id="@+id/select_language_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoutBtn"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/button_bg"
                android:text="@string/select_lanaguage"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
